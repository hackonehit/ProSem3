@model Online_Help_Desk.Models.Enduser

@{
    ViewBag.Title = "Edit Profile";
    Layout = "~/Views/Shared/_LayoutIndexEndUser.cshtml";
}

<div class="col-md-2">

</div>
<div class="col-md-8">
    <div class="col-md-4 col-sm-4 well">
        <ul class="nav nav-stacked nav-pills well">
            <li class="active"><a data-toggle="pill" href="#home">Create Request</a></li>
            <li><a data-toggle="pill" href="#menu1">My Request</a></li>
