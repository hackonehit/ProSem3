@model IEnumerable<Online_Help_Desk.Models.Staff>

@{
    ViewBag.Title = "List Staff";
    Layout = "~/Views/Shared/_LayoutIndexAdmin.cshtml";
}
<div class="col-sm-3 sidenav">
    <h4>Perfect Technological Innovation</h4>
    <ul class="nav nav-pills nav-stacked">
        <li>@Html.ActionLink("Index", "Index", "Admin")</li>
        <li class="active">@Html.ActionLink("View List Staff", "DetailListStaff", "Admin")</li>
        <li>@Html.ActionLink("View List End-User", "DetailListUser", "Admin")</li>
        <li>@Html.ActionLink("View List Register", "ViewListRegister", "Admin")</li>
        <li><a href="#section3">Change Password</a></li>
    </ul>

</div>
@Html.ActionLink("Create New","CreateStaff","Admin")
<div class="col-sm-9">
    <h2>List Staff</h2>
    <div>
        @using (Html.BeginForm("DetaiListStaff","Admin",FormMethod.Get))
        {
            <label>Search by UserName:</label>
            <input type="text" name="sName" placeholder="Enter any charactor..." />
            <input type="submit" value="Filter" />
        }
    </div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SUserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Level)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SUserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Level)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditInforStaff", new { id = item.SUserName }) |
                    @Html.ActionLink("Details", "DetailsInfoStaffs", new { id = item.SUserName }) |
                    @Html.ActionLink("Block", "BlockStaff", new { id = item.SUserName },

                new { onclick = "return confirm('Are you sure?')" })
                </td>
            </tr>
        }

    </table>
    </div>

